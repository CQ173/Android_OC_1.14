      <TextView 
          android:layout_width="match_parent"
          android:layout_height="170dp"
          android:background="@drawable/oji_lunbo1"/>
        <LinearLayout
            android:id="@+id/ll_tradeManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="16dp"
            android:background="#ffffff"
            android:visibility="gone"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:paddingBottom="12dp"
                android:text="交易管理"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_tradeFlow"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="交易流水"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:background="@drawable/trade_flow_bg">

            </TextView>
        </LinearLayout>
	
        <LinearLayout
            android:id="@+id/ll_hisPaySystem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="16dp"
            android:background="#ffffff"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:paddingBottom="12dp"
                android:text="汇缴管理"
                android:textSize="16sp" />
            
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
               
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/paysys_special_backgroud">

                <LinearLayout
                    android:id="@+id/layout_hisPaySystem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/hispaysys_logo"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="#ffffff"
                        android:text="历史汇缴数据"/>
                </LinearLayout>

                <View
                android:id="@+id/line_view"
                android:layout_width="0.02dp"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_weight="0"
                android:background="#ffffff"
                android:visibility="gone"
                   >
                </View>
                 
               <LinearLayout
                   android:id="@+id/ll_excption"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:gravity="center_horizontal"
                   android:orientation="vertical"
                   android:visibility="gone"
                   >
                   <ImageView 
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:src="@drawable/exciption_paysystem"/>
                   <TextView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="10dp"
                       android:textColor="#ffffff"
                       android:text="异常汇缴"/>
               </LinearLayout>
                
            </LinearLayout>
        </LinearLayout>
		
        <LinearLayout
            android:id="@+id/layout_outletsManage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="16dp"
            android:background="#ffffff"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="代售点管理"
                android:textSize="16sp" />
            
            <LinearLayout
                android:id="@+id/layout_outletsList"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
               
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/outlets_managelist_bg">
                

                   <ImageView 
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:layout_marginLeft="20dp"
                       android:src="@drawable/outletslist_logo_"/>
                   <TextView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp"
                       android:textSize="16sp"
                       android:textColor="#ffffff"

                       android:text="代售点列表"/>
               </LinearLayout>


                  <LinearLayout
                      android:id="@+id/layout_outletsRelation"
                      android:layout_width="match_parent"
                      android:layout_height="70dp"
                      android:layout_marginLeft="12dp"
                      android:layout_marginRight="12dp"
                      android:gravity="center_vertical"
                      android:layout_marginTop="10dp"
                      android:orientation="horizontal"
                      android:background="@drawable/outletsrelation_bg"

                      >
                      <!--android:visibility="gone"-->
                      <ImageView
                          android:layout_width="30dp"
                          android:layout_height="30dp"
                          android:layout_marginLeft="20dp"
                          android:src="@drawable/outlets_relation_logo"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="10dp"
                          android:textColor="#ffffff"
                          android:textSize="16sp"
                          android:text="代售点关联"/>
                  </LinearLayout>

                  <LinearLayout
                      android:id="@+id/layout_windowAnchored"
                      android:layout_width="match_parent"
                      android:layout_height="70dp"
                      android:layout_marginLeft="12dp"
                      android:layout_marginRight="12dp"
                      android:gravity="center_vertical"
                      android:layout_marginTop="10dp"
                      android:orientation="horizontal"
                      android:background="@drawable/window_anchored_bg"

                      >
                      <!--android:visibility="gone"-->
                      <ImageView
                          android:layout_width="30dp"
                          android:layout_height="30dp"
                          android:layout_marginLeft="20dp"
                          android:src="@drawable/window_anchored"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="10dp"
                          android:textColor="#ffffff"
                          android:textSize="16sp"
                          android:text="窗口号挂靠"/>
                  </LinearLayout>

            </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_adminManageArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
           <!-- android:visibility="gone"-->
        <LinearLayout
            android:id="@+id/ll_financeManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="16dp"
            android:background="#ffffff"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:paddingBottom="12dp"
                android:text="财务管理"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_financeListAppy"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="财务申请列表"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:background="@drawable/finance_manage_bg"
                >

            </TextView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_financeContacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="16dp"
            android:background="#ffffff"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:paddingBottom="12dp"
                android:text="财务往来"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_financeContacts"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="往来明细"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:background="@drawable/contacts_bg"
                >

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_systemSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="16dp"
            android:background="#ffffff"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:paddingBottom="12dp"
                android:text="系统设置"
                android:textSize="16sp" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"

                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/system_settings_bg">


                    <TextView
                        android:id="@+id/tv_userManager"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:text="用户管理"/>


               <!-- <View

                    android:layout_width="0.02dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="0"
                    android:background="#ffffff"

                    >
                </View>-->

                <TextView
                    android:id="@+id/tv_windowAnchored"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:text="窗口挂靠"/>

            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
	</LinearLayout>
