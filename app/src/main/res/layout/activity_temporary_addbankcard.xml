	<LinearLayout
		android:id="@+id/layout_openBankArea"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="16dp"
		android:orientation="horizontal"
		android:background="#ffffff"
		android:layout_marginTop="10dp"
		>
		<TextView
			android:layout_width="0dp"
			android:layout_weight="0.3"
			android:layout_height="wrap_content"
			android:textSize="14sp"
			android:text="开户行所在地"/>
		<TextView
			android:id="@+id/tv_openBankArea"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:textColor="#666666"
			android:textSize="14sp"
			android:layout_weight="0.7"

			android:text="请选择"/>

		<ImageView
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_alignParentRight="true"
			android:src="@drawable/bottom_arrow"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0.02dp"
		android:background="#dbdbdb" >
	</LinearLayout>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="16dp"
		android:orientation="horizontal"

		android:background="#ffffff">
		<TextView
			android:layout_width="0dp"
			android:layout_weight="0.3"
			android:layout_height="wrap_content"
			android:textSize="14sp"
			android:text="开户支行"/>
		<EditText
			android:id="@+id/et_openBank"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text=""
			android:textColor="#666666"
			android:textSize="14sp"
			android:layout_weight="0.7"
			android:hint="请填写开户支行"
			android:maxLength="50"
			android:background="@null"
			/>



	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0.02dp"
		android:background="#dbdbdb" >
	</LinearLayout>


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="16dp"
			android:orientation="horizontal"

			android:background="#ffffff">
			<TextView
				android:layout_width="0dp"
				android:layout_weight="0.3"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:text="银行预留手机号"/>
			<EditText
				android:id="@+id/et_bank_phone"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:textColor="#666666"
				android:textSize="14sp"
				android:layout_weight="0.7"
				android:hint=" 请填写银行预留手机号"
				android:maxLength="11"
				android:digits="1234567890"
				android:background="@null"
				/>



		</LinearLayout>
    

	
	<Button
        android:id="@+id/bt_save"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bluebutton_click_style"
        android:text="确定绑卡"
        android:textColor="#ffffff" />

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="信息已安全加密，仅用于银行验证"
			android:layout_marginTop="5dp"
			android:gravity="center"
			android:textSize="13sp"
			/>
</LinearLayout>
	</ScrollView>
</LinearLayout>
