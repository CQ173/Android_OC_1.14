<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4d90e7"
    android:id="@+id/ll_layout"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#4d90e7" >

        <ImageView
            android:id="@+id/qrcode_iv_back"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y50"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的二维码"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_three"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:src="@drawable/three"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>
<LinearLayout
    android:id="@+id/ll_save_code"
    android:layout_marginTop="@dimen/y30"
    android:layout_width="match_parent"
    android:layout_marginRight="@dimen/x60"
    android:layout_marginLeft="@dimen/x60"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
     >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e9e9e9">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/huoniao_logo"/>

    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:layout_weight="0.80"
        android:background="#fff"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            >


            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="0.2"
                />

            <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/y120"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tv_outletsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="长沙XXXXXX代售点"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textColor="#598bc3"
                android:layout_gravity="left"
                android:paddingLeft="@dimen/x20"
                />
<!--
            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名：12345"
                android:textSize="@dimen/y30"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/x10"
                android:paddingLeft="@dimen/x20"
                android:textColor="@color/gray"
                android:singleLine="true"
                />-->

        </LinearLayout>

    </LinearLayout>

     <!--   <View

            android:layout_gravity="center"
            android:layout_width="@dimen/x480"
             android:layout_height="@dimen/y3"
             android:background="@drawable/dottedline"
             android:layerType="software"
            />
-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:gravity="center"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"

                android:text="微信/支付宝 扫一扫向我付款"
                android:background="@drawable/text_round"
                android:textSize="@dimen/y28"
                android:textColor="@color/white"
                android:padding="5dp"

                android:gravity="center"
                android:id="@+id/textView8" />

            <ImageView
                android:id="@+id/iv_qrcode"
                android:layout_width="180dp"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.22"
        android:background="@color/lightBlue"
        android:orientation="horizontal"
        android:gravity="top"
        android:paddingTop="10dp"
        >
        <TextView
            android:id="@+id/iv_imgo"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/sao"
            android:drawablePadding="8dp"
            android:text="微信/支付宝\n“扫一扫”"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/iv_imgt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/code"
            android:text="扫描二维码"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/iv_imgr"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/confirmgo"
            android:text="完成付款"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="gone"
            />

    </LinearLayout>
</LinearLayout>
</LinearLayout>