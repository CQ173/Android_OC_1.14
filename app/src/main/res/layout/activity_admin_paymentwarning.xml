<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#4d90e7" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="预警信息列表"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="16dp"

            android:orientation="horizontal">

       <!--     <TextView
                android:id="@+id/search_area"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:drawableRight="@drawable/search"
                android:background="@drawable/shape_life_search"
                android:hint="归属机构"
                android:padding="10dp"
                android:textSize="14sp"
                android:maxLines="1"
                android:textColorHint="#b7b7b7"
                />-->
            <LinearLayout
                android:id="@+id/ll_ownership_institution"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1">
            <TextView
                android:id="@+id/tv_ownership_institution"
                android:layout_height="38dp"
                android:layout_marginRight="8dp"
                android:text="归属机构"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/drop_down"
                android:background="@drawable/shape_editext_white"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:maxLines="1"
                 android:textSize="14sp"
                android:textColor="#b7b7b7"
                  />
            </LinearLayout>
<LinearLayout
    android:id="@+id/ll_processingState"
    android:layout_width="0dp"
    android:layout_height="38dp"
    android:layout_weight="1"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/tv_processingState"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_weight="1"
        android:drawableRight="@drawable/drop_down"
        android:background="@drawable/shape_editext_white"

        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:maxLines="1"
        android:textSize="14sp"
        android:layout_marginRight="4dp"
        android:text="处理状态"
        android:textColor="#b7b7b7"
        />

</LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/et_windowNumber"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/shape_editext_white"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="8dp"
            android:text=""
            android:hint="窗口号"
            android:textColorHint="#b7b7b7"
            android:digits="1234567890"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="4dp"
            android:textSize="14sp"
            android:maxLines="1"
            />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:layout_marginTop="8dp"
            android:paddingBottom="10dp"
            android:background="#ffffff"
            android:gravity="center_vertical">

            <RelativeLayout
                android:id="@+id/layout_startDataChoice"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="3"
                android:background="@drawable/shape_editext_white"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:hint="开始日期"
                    android:textColorHint="#b7b7b7"
                    android:text=""
                    android:textSize="12sp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginRight="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/paysystem_select"/>
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="—"/>

            <RelativeLayout
                android:id="@+id/layout_endDataChoice"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:background="@drawable/shape_editext_white"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_endDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:hint="结束日期"
                    android:textColorHint="#b7b7b7"
                    android:text=""
                    android:textSize="12sp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginRight="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/paysystem_select"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginLeft="6dp"

                android:text="查询"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="@drawable/bluebutton_click_style"/>

        </LinearLayout>






        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/mPullToRefreshListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:smoothScrollbar="true"
        />




</LinearLayout>
</LinearLayout>