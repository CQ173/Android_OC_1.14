<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
   >
    
  
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#4d90e7" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:scrollbars="none">
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"

       android:orientation="vertical"
       >

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0.02dp"
	    android:layout_marginTop="8dp"
	    android:background="#dbdbdb" >

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_choiceIdentity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
	    android:paddingBottom="12dp"
	    android:paddingLeft="18dp"
	   	android:paddingRight="18dp"
	    android:background="#ffffff"
        >

        <TextView
        android:id="@+id/tv_identity"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"

	    android:text="选择用户类型"
	    android:textColor="#666666"
	    android:textSize="16sp"
	    />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/bottom_arrow"/>
    </RelativeLayout>
	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.02dp"
            android:background="#dbdbdb" >
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.02dp"
            android:layout_marginTop="10dp"
            android:background="#dbdbdb" >
    </LinearLayout>
     <RelativeLayout
        android:id="@+id/rl_choiceLoction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
	    android:paddingBottom="12dp"
	    android:paddingLeft="18dp"
	    android:paddingRight="18dp"
	    android:background="#ffffff"
        >

        <TextView
        android:id="@+id/tv_location"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"

	    android:text="选择地理区域"
	    android:textColor="#666666"
	    android:textSize="16sp"
	    />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/bottom_arrow"/>
    </RelativeLayout>

     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.02dp"
            android:background="#dbdbdb" >
    </LinearLayout>

     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.02dp"
            android:layout_marginTop="10dp"
            android:background="#dbdbdb" >
    </LinearLayout>
     <RelativeLayout
        android:id="@+id/rl_manageArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
	    android:paddingBottom="12dp"
	    android:paddingLeft="18dp"
	    android:paddingRight="18dp"
	    android:background="#ffffff"
        >

        <TextView
        android:id="@+id/tv_manageArea"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"

	    android:text="选择管辖区域"
	    android:textColor="#666666"
	    android:textSize="16sp"
	    />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/bottom_arrow"/>
    </RelativeLayout>

     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.02dp"
            android:background="#dbdbdb" >
    </LinearLayout>


     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.02dp"
            android:layout_marginTop="10dp"
            android:background="#dbdbdb" >
    </LinearLayout>
      <RelativeLayout
        android:id="@+id/rl_choiceFirstAgent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
	    android:paddingBottom="12dp"
	    android:paddingLeft="18dp"
	    android:paddingRight="18dp"
	    android:background="#ffffff"
        >

        <TextView
        android:id="@+id/tv_firstAgent"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"

	    android:text="选择第一代理人"
	    android:textColor="#666666"
	    android:textSize="16sp"
	    />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/bottom_arrow"/>
    </RelativeLayout>

    <EditText
            android:id="@+id/et_companyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
		    android:visibility="gone"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="请输入公司名称"

            android:maxLength="50"
            android:singleLine="true"
            android:textSize="16sp" />
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.02dp"
            android:background="#dbdbdb" >
    </LinearLayout>

     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.02dp"
            android:layout_marginTop="10dp"
            android:background="#dbdbdb" >
    </LinearLayout>
      <RelativeLayout
        android:id="@+id/rl_choiceAgentType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
	    android:paddingBottom="12dp"
	    android:paddingLeft="18dp"
	    android:paddingRight="18dp"
	    android:background="#ffffff"
        >

        <TextView
        android:id="@+id/tv_agentType"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"

	    android:text="选择代理人类型"
	    android:textColor="#666666"
	    android:textSize="16sp"
	    />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/bottom_arrow"/>
    </RelativeLayout>

     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.02dp"
            android:background="#dbdbdb" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:background="#ffffff">


     <EditText
            android:id="@+id/et_windowNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="请输入窗口号"
            android:digits="1234567890"
            android:maxLength="6"
            android:visibility="gone"
            android:singleLine="true"
            android:textSize="16sp" />

     <EditText
            android:id="@+id/et_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="请输入用户名（由字母和数字组成）"
            android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            android:maxLength="20"
            android:singleLine="true"
            android:textSize="16sp" />

     <EditText
            android:id="@+id/et_orgName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="请输入机构名称"
            android:maxLength="20"
            android:singleLine="true"
            android:textSize="16sp" />

     <EditText
            android:id="@+id/et_orgAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="请输入机构详细地址"
            android:maxLength="50"
            android:singleLine="true"
            android:textSize="16sp" />
     <EditText
            android:id="@+id/et_passaword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="请设置登录密码"
            android:maxLength="20"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzQWERTYUIOPASDFGHJKLZXCVBNM"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="16sp" />

     <EditText
            android:id="@+id/et_confirmPassaword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="请确认登录密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzQWERTYUIOPASDFGHJKLZXCVBNM"
            android:maxLength="20"
            android:textSize="16sp" />

     <Button
        android:id="@+id/bt_nextStep"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bluebutton_click_style"
        android:text="下一步"
        android:textColor="#ffffff" />
     </LinearLayout>
     </LinearLayout>
    </ScrollView>
</LinearLayout>
