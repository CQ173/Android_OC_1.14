<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/rl_outletsPaySystem"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/backgroud_backcard"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            >
            <ImageView
                android:id="@+id/iv_bankLog"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/jianshebank_log" />
            <TextView
                android:id="@+id/tv_bankName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="----"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                />

            <TextView
                android:id="@+id/tv_cardType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:layout_marginRight="12dp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:background="#779CE0"
            />
        <LinearLayout
            android:id="@+id/layout_nameAndType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            >



            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="**** **** **** "

                android:textColor="#ffffff"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_cardCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="****"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="14dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_custname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#ffffff"
                android:textSize="12sp"


                android:layout_weight="1"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="18dp"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="单笔支付限额"
                    android:textColor="#ffffff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:text="当日支付限额"
                    android:textColor="#ffffff"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_everyLimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="----"
                    android:textColor="#ffffff"/>

                <TextView
                    android:id="@+id/tv_dailyLimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:text="----"
                    android:textColor="#ffffff"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_unbundling"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="解约"
                android:textSize="9sp"
                android:textColor="@color/white"
                android:background="@drawable/shape_editext_backgroud_alpha_blue"
                />
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
