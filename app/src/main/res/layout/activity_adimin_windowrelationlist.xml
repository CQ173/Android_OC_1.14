<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#4d90e7">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="窗口号挂靠审核"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

            <EditText
                android:id="@+id/search_area"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:drawableRight="@drawable/search"
                android:background="@drawable/shape_life_search"
                android:hint="归属区域"
                android:padding="10dp"
                android:textSize="14sp"
                android:maxLines="1"
                android:textColorHint="#b7b7b7"
                />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"

        android:layout_marginBottom="14dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_searchContent"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="3"
            android:background="@drawable/shape_lin_search"
            android:hint="窗口号/名称/账号"
            android:layout_marginRight="4dp"
            android:padding="10dp"
            android:textSize="14sp"
            android:maxLines="1"
            android:textColorHint="#b7b7b7"
            />

        <TextView
            android:id="@+id/tv_searchStatus"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="2"
            android:drawableRight="@drawable/drop_down"
            android:background="@drawable/shape_lin_search"
            android:padding="10dp"
            android:maxLines="1"
            android:textSize="14sp"
            android:layout_marginRight="8dp"
            android:text="审核状态"
            android:textColor="#b7b7b7"
            />
        <TextView
            android:id="@+id/tv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4d90e7"
            android:textSize="16sp"
            android:text="查询"/>
    </LinearLayout>

    <ListView
        android:id="@+id/mListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

    </ListView>
</LinearLayout>
