<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    >
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="#ffffff">
	    
	    <TextView
	        android:id="@+id/tv_planeTicket"
	        android:layout_width="match_parent"
	        android:layout_height="120dp"
	        android:layout_marginTop="8dp"
	        android:background="@drawable/planeticket"/>
	    
	    <TextView
	       	android:id="@+id/tv_securitiesAccount"
	        android:layout_width="match_parent"
	        android:layout_height="120dp"
	        android:layout_marginTop="8dp"
	        android:background="@drawable/securities_account"/>
	    <TextView
	        android:id="@+id/tv_ecoFarm"
	        android:layout_width="match_parent"
	        android:layout_height="120dp"
	        android:layout_marginTop="8dp"
	        android:background="@drawable/eco_farm"/>
	    <TextView
	        android:id="@+id/tv_ticket"
	        android:layout_width="match_parent"
	        android:layout_height="120dp"
	        android:layout_marginTop="8dp"
	        android:background="@drawable/ticket"/>
	    <TextView
	        android:id="@+id/tv_insurance"
	        android:layout_width="match_parent"
	        android:layout_height="120dp"
	        android:layout_marginTop="8dp"
	        android:background="@drawable/insurance"/>
	</LinearLayout>
	
</ScrollView>
