<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_noticeBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#FFF9E9"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统通知"
            android:padding="4dp"
            android:textColor="#FF9F3F"
            android:background="@drawable/textbackgroud92"/>


        <com.huoniao.oc.util.TextSwitcherView
            android:id="@+id/sysTemNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            >

        </com.huoniao.oc.util.TextSwitcherView>
    </LinearLayout>
    <com.huoniao.oc.custom.MySwipeRefreshLayout

        android:id="@+id/newhomepage_swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        >

        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f5f9"
            android:scrollbars="none"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <com.huoniao.oc.util.SmartImageView
                        android:id="@+id/main_gallery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/main_lin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </RelativeLayout>



                <LinearLayout
                    android:id="@+id/layout_adminModular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/ll_wallet_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:orientation="horizontal"

                        >

                        <LinearLayout
                            android:id="@+id/layout_tradeflow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:paddingBottom="12dp"
                            android:paddingTop="12dp"
                            >

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/trade_flow" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="交易明细"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0.02dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:background="#dbdbdb" >
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_paysysSum"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:paddingBottom="12dp"
                            android:paddingTop="12dp" >

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/paysys_sum"
                                android:id="@+id/imageView2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="汇缴概况"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0.02dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:background="#dbdbdb" >
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_caiWu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:paddingBottom="12dp"
                            android:paddingTop="12dp" >

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/finance" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="财务明细"
                                android:textSize="14sp" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_returnLateFeeArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="12dp"
                        android:text="工作流"
                        android:textSize="16sp"
                        android:textColor="#131313"
                        android:background="#FFFFFF"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.02dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_weight="0"
                        android:background="#dbdbdb" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_returnLateFee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:padding="12dp"
                        android:text="滞纳金返还"
                        android:background="#FFFFFF"/>

                     </LinearLayout>
                    <TextView
                        android:id="@+id/tv_outsIncomeCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="12dp"
                        android:text="代售点收益统计"
                        android:background="#FFFFFF"/>

                    <TextView
                        android:id="@+id/tv_stationPaymentInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="12dp"
                        android:text="车站汇缴信息"
                        android:background="#FFFFFF"/>

                    <LinearLayout
                        android:id="@+id/ll_platformOverview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="16dp"
                        android:layout_marginTop="10dp"
                        android:background="#ffffff"
                        android:orientation="vertical"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="平台概况"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.02dp"
                            android:background="#dbdbdb" >
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="14dp"
                            android:text="访问量"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tv_pageViewForMonth"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="16sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#4d90e7"
                                    android:textSize="12sp"
                                    android:text="/月"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tv_pageViewForWeek"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="16sp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#4d90e7"
                                    android:textSize = "12sp"
                                    android:text="/周"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tv_pageViewForDay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="16sp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#4d90e7"
                                    android:textSize="12sp"
                                    android:text="/日"/>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="本周使用率"/>

                            <TextView
                                android:id="@+id/tv_utilizationRate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#4d90e7"
                                android:textSize="16sp"
                                android:layout_marginLeft="16dp"
                                android:text=""/>


                        </LinearLayout>
                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:paddingRight="12dp">
                            <TextView
                                android:id="@+id/tv_surveyDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#999999"
                                android:layout_alignParentRight="true"
                                android:text=""/>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="#ffffff"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="往来"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.02dp"
                            android:background="#dbdbdb" >
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="16dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:gravity="center"
                            android:paddingTop="16dp" >
                            <LinearLayout
                                android:id="@+id/layout_receivable"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginRight="5dp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="60dp"

                                    android:background="@drawable/receivable" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_gravity="center_horizontal"
                                    android:text="— 应收应付 —"
                                    android:textColor="#777777"/>
                            </LinearLayout>
                            <View
                                android:layout_width="0.02dp"

                                android:layout_height="match_parent"
                                android:background="#dbdbdb" />

                            <LinearLayout
                                android:id="@+id/layout_netReceipts"
                                android:layout_width="0.02dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="60dp"

                                    android:background="@drawable/net_receipts" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"

                                    android:layout_gravity="center_horizontal"
                                    android:text="— 实收实付 —"
                                    android:textColor="#777777"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/ll_journal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="16dp"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="系统提醒"
                        android:textSize="16sp"
                        android:textColor="@color/alphaBlack"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.02dp"

                        android:background="#dbdbdb" >
                    </LinearLayout>


                    <ListView
                        android:id="@+id/stationLogListView"
                        android:layout_width="match_parent"
                        android:layout_height="120dp">

                    </ListView>

                    <RelativeLayout
                        android:id="@+id/rl_stalookMoreLog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:paddingRight="12dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#4d90e7"
                            android:layout_alignParentRight="true"
                            android:text="查看更多  >"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </com.huoniao.oc.custom.MySwipeRefreshLayout>
</LinearLayout>