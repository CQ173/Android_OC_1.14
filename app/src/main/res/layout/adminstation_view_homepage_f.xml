<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <LinearLayout
        android:id="@+id/ll_noticeBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#FFF9E9"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统通知"
            android:padding="4dp"

            android:textColor="#FF9F3F"
            android:background="@drawable/textbackgroud92"/>


        <com.huoniao.oc.util.TextSwitcherView
            android:id="@+id/sysTemNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            >

        </com.huoniao.oc.util.TextSwitcherView>
    </LinearLayout>

    <com.huoniao.oc.custom.MySwipeRefreshLayout

        android:id="@+id/newhomepage_swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        >

        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f5f9"
            android:scrollbars="none"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <com.huoniao.oc.util.SmartImageView
                        android:id="@+id/main_gallery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/main_lin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </RelativeLayout>



           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:paddingTop="12dp"
               android:paddingLeft="12dp"
               android:paddingRight="12dp"
               android:paddingBottom="12dp">


               <LinearLayout
                   android:id="@+id/ll_orgManagement"
                   android:layout_width="0dp"
                   android:layout_height="80dp"
                   android:layout_weight="1"
                   android:orientation="vertical"
                   android:gravity="center_horizontal"
                   android:background="@drawable/textbackgroud_orange">

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="16dp"
                       android:src="@drawable/org_manage"
                       android:id="@+id/imageView6" />

                   <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="组织管理"
                        android:layout_marginTop="8dp"
                        android:textColor="#FFFFFF"/>
               </LinearLayout>


               <LinearLayout
                   android:id="@+id/ll_proxyDistribution"
                   android:layout_width="0dp"
                   android:layout_height="80dp"
                   android:layout_weight="1"
                   android:orientation="vertical"
                   android:gravity="center_horizontal"
                   android:layout_marginLeft="16dp"
                   android:background="@drawable/text_round_bg_blue6">

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="16dp"
                       android:src="@drawable/proxy_agent"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="代理分布"
                       android:layout_marginTop="8dp"
                       android:textColor="#FFFFFF"/>
               </LinearLayout>
           </LinearLayout>

           <View
               android:layout_width="match_parent"
               android:layout_height="10dp"
               android:background="#DEDEDE"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/early_warning"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textSize="16sp"
                    android:text="预警"

                    android:textColor="@color/black"/>

                <LinearLayout
                    android:id="@+id/ll_waitDo_earlyWarning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/red_horn"/>

                <TextView
                    android:id="@+id/tv_waitDo_earlyWarning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="---"
                    android:textSize="12sp"
                    android:textColor="@color/umsmpospi_red"

                    />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_lookMore_earlyWarning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="#63A8EB"


                    android:text="查看更多 >"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.02dp"
                android:background="#dbdbdb" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_todayWarning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="#6AD3FF"
                        android:textSize="24sp"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="今日"
                        android:textColor="#999999"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0.02dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="#dbdbdb" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_toMonthWarning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textColor="#66C27F"
                        android:textSize="24sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="本月"
                        android:textColor="#999999"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0.02dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="#dbdbdb" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_toYearWarning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10000"
                        android:textColor="#FFC150"
                        android:textSize="24sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="今年"
                        android:textColor="#999999"
                        />
                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#DEDEDE"></View>


                <LinearLayout
                    android:id="@+id/ll_paymentCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/remittance_count"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="6dp"
                        android:textSize="16sp"
                        android:text="汇缴统计"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"

                        android:src="@drawable/right_arrow"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.02dp"
                    android:background="#dbdbdb" />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="12dp"
               android:paddingRight="12dp"
               android:layout_marginTop="14dp"
               android:gravity="center_vertical"
               android:orientation="horizontal">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="应收金额"
                   android:textColor="#999999"
                   />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp">
               <ProgressBar
                   android:id="@+id/mProgressBar1"
                   style="@style/mProgressBar2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"


                   />

                    <TextView
                        android:id="@+id/tv_shouldReceive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00元"
                        android:layout_centerInParent="true"
                        android:textColor="#FFFFFF"/>

                </RelativeLayout>
           </LinearLayout>


           <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingLeft="12dp"
                  android:paddingRight="12dp"
                  android:layout_marginTop="14dp"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="实收金额"
                        android:textColor="#999999"
                        />

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="12dp"
                   android:layout_marginRight="12dp">
                   <ProgressBar
                       android:id="@+id/mProgressBar2"
                       style="@style/mProgressBar3"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"


                       />

                   <TextView
                       android:id="@+id/tv_amountReceived"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="0.00元"
                       android:textColor="#FFFFFF"
                       android:layout_alignParentTop="true"
                       android:layout_centerHorizontal="true" />

               </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="代理实缴"
                        android:textColor="#999999"
                        />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp">
                    <ProgressBar
                        android:id="@+id/mProgressBar3"
                        style="@style/mProgressBar4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        />

                    <TextView
                        android:id="@+id/tv_agencyPayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00元"
                        android:layout_centerInParent="true"
                        android:textColor="#FFFFFF"/>

                </RelativeLayout>
            </LinearLayout>


            <View
               android:layout_width="match_parent"
               android:layout_height="10dp"
               android:background="#DEDEDE"></View>

                <LinearLayout
                    android:id="@+id/ll_agentPaymentCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/agent_remittance"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="6dp"
                        android:textSize="16sp"
                        android:text="代理汇缴统计"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"

                        android:src="@drawable/right_arrow"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.02dp"
                    android:background="#dbdbdb" />




                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:text="2019-01-18"
                    android:textColor="@color/black"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="汇缴数量"
                        android:textColor="@color/black"/>
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChart1"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="8dp"
                        />


                    <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:gravity="center_vertical"
                         android:layout_marginTop="14dp"
                         android:orientation="horizontal">

                        <TextView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/text_round_bg_blue7"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:textSize="12sp"
                            android:text="已完成："
                            />

                        <TextView
                            android:id="@+id/tv_finishNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="500"
                            android:textSize="16sp"
                            android:textColor="#69D3FD"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="家"
                            />
                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@drawable/text_round_bg_blue8"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textSize="12sp"
                                android:text="未完成："
                                />

                            <TextView
                                android:id="@+id/tv_noFinishNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="50"

                                />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="家"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:layout_marginLeft="14dp"
                        android:orientation="vertical">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="汇缴金额"
                            android:textColor="@color/black"/>
                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/pieChart2"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="8dp"
                            />




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="14dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="#FEC04F"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textSize="12sp"
                                android:text="已完成："
                                />

                            <TextView
                                android:id="@+id/tv_finishMoney"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50000.00"
                                android:textSize="16sp"
                                android:textColor="#FEC04F"
                                />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="元"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="#FEDB97"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:layout_marginLeft="4dp"
                                android:text="未完成："
                                />

                            <TextView
                                android:id="@+id/tv_noFinishMoney"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="50.00"
                                />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="元"
                                />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
    </LinearLayout>

    </ScrollView>
    </com.huoniao.oc.custom.MySwipeRefreshLayout>
</LinearLayout>