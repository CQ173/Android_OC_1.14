<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alphaGray"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/x20"
            >

            <ImageView
                android:id="@+id/iv_deletepwd"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/close"
                android:gravity="left"
                />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="退款确认"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="center"

                />

            <TextView
                android:id="@+id/tv_paypwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="设置支付密码"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:textColor="@color/blue"
                android:gravity="center"
                android:visibility="gone"

                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dbdbdb" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.16"
            android:layout_marginTop="14dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="您是否需要进行退款申请？退款成功后资金按原路返还"
            android:textSize="18sp"
            android:textColor="#ef8609"
            android:gravity="center"

            />



        <com.huoniao.oc.custom.PayEditText
            android:id="@+id/PayEditText_pay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.13"
            android:paddingLeft="@dimen/x60"
            android:paddingRight="@dimen/x60"
            android:layout_marginTop="14dp"
            />

        <com.huoniao.oc.custom.Keyboard
            android:layout_marginTop="@dimen/y30"
            android:id="@+id/KeyboardView_pay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.72"
            android:layout_marginLeft="@dimen/x60"
            android:layout_marginRight="@dimen/x60"
            />
        </LinearLayout>


</RelativeLayout>