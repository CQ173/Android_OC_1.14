<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_officeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="广州分局"
        android:textSize="16sp"
        android:textColor="@color/alpha_black"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应收金额"
                android:textColor="@color/alpha_black"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                >
                <ProgressBar
                    android:id="@+id/mProgressBar1"
                    style="@style/mProgressBar2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    />

                <TextView
                    android:id="@+id/tv_shouldReceive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00元"
                    android:layout_centerInParent="true"
                    android:textColor="#FFFFFF"/>

            </RelativeLayout>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实收金额"
            android:textColor="@color/alpha_black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            >
            <ProgressBar
                android:id="@+id/mProgressBar2"
                style="@style/mProgressBar3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

            <TextView
                android:id="@+id/tv_amountReceived2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00元"
                android:layout_centerInParent="true"
                android:textColor="#FFFFFF"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="代理实缴"
            android:textColor="@color/alpha_black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            >
            <ProgressBar
                android:id="@+id/mProgressBar3"
                style="@style/mProgressBar4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

            <TextView
                android:id="@+id/tv_agencyPayment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00元"
                android:layout_centerInParent="true"
                android:textColor="#FFFFFF"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>