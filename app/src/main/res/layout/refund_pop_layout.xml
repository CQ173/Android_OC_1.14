<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alphaGray"
    android:gravity="center"

    >


    <LinearLayout
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y600"
        android:background="@drawable/text_round_bg_white2"
        android:layout_marginBottom="@dimen/y200"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y30"
                android:layout_marginBottom="@dimen/y30"
                android:text="退款确认"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tv_paypwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置支付密码"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:textColor="@color/blue"
                android:visibility="gone"
                />

        </RelativeLayout>

        <View

            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:background="@android:color/darker_gray"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tv_shang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x30"
                android:text="        您是否需要进行申请退款，退款成功后资金将按原路返还。"
                android:textSize="20sp"
                android:textColor="@color/grayss"
                android:layout_marginRight="@dimen/x30"
                />
            <LinearLayout
                android:id="@+id/layout_capitalPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/x90"
                android:layout_marginRight="@dimen/x70"

                android:gravity="center"
                android:layout_marginTop="@dimen/y40"
                >
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="支付密码："
                 android:textSize="20sp"
                 android:textColor="@color/black"
                 />
            <EditText
                android:id="@+id/et_capitalPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:digits="0123456789"
                android:hint="请输入资金密码"
                android:textColor="@color/black"
                android:maxLength="6"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:background="@null"/>

            </LinearLayout>

            <View
                android:id="@+id/v_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x4"
                android:background="#99CC33"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="@dimen/x90"
                android:layout_marginRight="@dimen/x70"
                />
            </LinearLayout>
        <!--    <TextView
                android:id="@+id/tv_xia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="资金将按原路返还。"
                android:textSize="20sp"
                android:textColor="@color/grayss"
                android:layout_marginLeft="@dimen/x60"
                android:layout_marginTop="@dimen/y10"
                />-->

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:background="@android:color/darker_gray"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            >
          <TextView
              android:id="@+id/tv_confirm"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:text="确认"
              android:textSize="20sp"
              android:gravity="center"
              android:textColor="@color/blue"
              />
            <View
                android:layout_width="@dimen/x2"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tv_cancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/alpha_black"
                android:layout_weight="1"
                android:text="取消"
                android:textSize="20sp"
                android:gravity="center"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>