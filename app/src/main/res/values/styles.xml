<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>
    <item type="id" name="glide_tag" />
    <!-- Application theme.  android:Theme.Translucent   Base.Theme.AppCompat.Light-->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light" >
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
      <!--  <item name="android:windowBackground">@drawable/startpager</item>-->
    </style>
	
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">  
    	<item name="android:button">@drawable/checkbox_style</item>  
	</style>  
	
     <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="MyDialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
 <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
 <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
 <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
 <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
 <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
 <!-- 模糊 -->
    </style>

    <!--我的 条目logo图片大小-->
    <style name="me_imagesize">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
    </style>

    <!--我的  条目字体大小  字体颜色-->
    <style name="me_textsize_color">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/alpha_black</item>
    </style>

    <!--我的条目高度-->
    <style name="meHeight">
        <item name="android:layout_height">70dp</item>
    </style>

    <style name="text">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grayss</item>
    </style>

    <style name="textSize16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textSize12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#7000</item>
    </style>

    <style name="viewStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/alpha_backgroud</item>
    </style>

    <style name="userWeight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/alphaBlack</item>
    </style>

    <style name="userWeightBackgroud">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">0.7</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@drawable/shape_editext_white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grayss</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="userWeightBackgroud2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">0.7</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grayss</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="textla">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawableRight">@drawable/drop_down</item>

         <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">4dp</item>

        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#b7b7b7</item>
    </style>

    <style name="ll_user">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ll_user2">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="textSizeStyle">
        <item name="android:textSize">10sp</item>
    </style>

    <!-- 指定popWindow的动画 -->
    <style name="popwindow_anim">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>

    <style name="CustomTabTextAppearanceStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
</resources>
